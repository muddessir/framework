[Unit]
Description=FirstBoot
After=network.target
Before=rc-local.service
ConditionFileNotEmpty=/etc/framework/firstboot.sh

[Service]
ExecStart=/etc/framework/firstboot.sh
ExecStartPost=/bin/mv /etc/framework/firstboot.sh /etc/framework/firstboot.sh.done
Type=oneshot
RemainAfterExit=no

[Install]
WantedBy=multi-user.target